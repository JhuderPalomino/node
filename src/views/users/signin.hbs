<script src="/js/validator.js"></script> 	

<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center">Login</h1>
                <form action="#"  name="login" class="needs-validation" novalidate >
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp"
                            placeholder="Enter email" required>
                        
                        <div class="invalid-feedback">Invalid field.</div> 
                    </div>
                    <div class="form-group  mb-3">
                        <label for="exampleInputEmail1">Password</label>
                        <input type="password" name="password" id="password" class="form-control"
                            aria-describedby="emailHelp" placeholder="Enter Password" required>
                        
                        <div class="invalid-feedback">Invalid field.</div>  
                        
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <input class="form-check-input" type="checkbox" value="on" id="flexCheckDefault" >
                            <label class="form-check-label" for="flexCheckDefault">
                                <p class="text-center">Remember me </p>
                            </label>
                        </div>
                        <div class="col ">
                            <a href="../users/recovery">Did you forget your pass?</a>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Login</button>
                    </div>

                    <div class="col-md-12 text-center mb-3">
                            <span class="span-or ">or</span>
                    </div>
                    <div class="row mx-auto">
                        <div class="col text-center">
                            <a class="btn btn-secondary btn-floating" style="background-color: #266ecc;" href="#!"
                                role="button">
                                <i class="fab fa-facebook me-2"></i>Sign in with Facebook</a>
                        </div>
                        <div class="col text-center mb-3">
                            <a class="btn btn-secondary btn-floating" style="background-color: #c01b1b;" href="#!"
                                role="button">
                                <i class="fab fa-google me-2"></i>Sign in with Google</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <p class="text-center">Are you new here? <a href="../users/signup" id="signup">Sign up</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

